<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.farmaciadelivery.ui.empresa.info.InfoEmpresaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white">

        <ImageView
            android:id="@+id/imageBackIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center|start"
            android:text="Informações"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp">

        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Digite todas as suas informações:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Nome:"
                android:textColor="#404040"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editEmpresaNome"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/text_layoutedittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Digite um Nome:"
                android:inputType="text"
                android:textAllCaps="false"
                android:textColor="#0E0D0D"
                android:textColorHint="#605F5F"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Horário De Funcionamento:"
                android:textColor="#404040"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <EditText
                android:id="@+id/editEmpresaFuncionamento"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/text_layoutedittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Digite um Período de Funcionamento:"
                android:inputType="text"
                android:textColorHint="#605F5F"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Tempo De Entrega:"
                android:textColor="#404040"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <EditText
                android:id="@+id/editEmpresaTempo"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/text_layoutedittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Digite um Tempo De Entrega:"
                android:inputType="text"
                android:textColorHint="#605F5F"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewTaxa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Taxa de Entrega (Ex: 5.0 Para R$5,00)"
                android:textColor="#404040"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTaxa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="(Ex: 0.0 Para R$0,00 caso não haja taxa de Entrega)"
                android:textColor="#404040"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <EditText
                android:id="@+id/editEmpresaTaxa"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/text_layoutedittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Ex: 5.0 Para R$5,00"
                android:inputType="numberDecimal"
                android:textColorHint="#605F5F"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Endereço:"
                android:textColor="#404040"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <EditText
                android:id="@+id/editEmpresaEndereco"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/text_layoutedittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Digite um Endereço:"
                android:inputType="textPersonName"
                android:textColorHint="#605F5F"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Telefone:"
                android:textColor="#404040"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <EditText
                android:id="@+id/editEmpresaTel"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/text_layoutedittext"
                android:ems="10"
                android:gravity="center"
                android:hint="Digite um Telefone:"
                android:inputType="textPersonName"
                android:textColorHint="#605F5F"
                android:textSize="15dp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/button_color"
                android:onClick="validarDadosEmpresa"
                android:text="Salvar"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                app:backgroundTint="#4B884E"
                app:backgroundTintMode="add" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>