<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#FAFFFFFF"
    app:cardCornerRadius="11dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:background="#FAFFFFFF">

        <TextView
            android:id="@+id/textNomeRefeicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="13dp"
            android:text="Item"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textPreco" />

        <TextView
            android:id="@+id/textPrecoAnteriorProduto"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="95dp"
            android:fontFamily="sans-serif"
            android:text="  "
            android:textAllCaps="false"
            android:textColor="#155719"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textPreco"
            tools:visibility="visible" />



        <TextView
            android:id="@+id/textPreco"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="95dp"
            android:fontFamily="sans-serif"
            android:text="R$ 19.90"
            android:textAllCaps="true"
            android:textColor="#0C7111"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textQtdCarrinho"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="10dp"
            android:text="Descricao item"
            android:textColor="#535353"
            android:textSize="11sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textNomeRefeicao" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageModelRetrieve"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/textPreco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundImageView"
            app:srcCompat="@drawable/ic_launcher_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/divisor"
        android:visibility="invisible"
        tools:visibility="invisible" />

</com.google.android.material.card.MaterialCardView>